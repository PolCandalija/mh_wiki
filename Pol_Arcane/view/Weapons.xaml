<UserControl x:Class="mh.view.Weapons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mh.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vm="clr-namespace:mh.viewModel">
    <Grid>
        <Border Background="Transparent"
CornerRadius="0,20,20,0">
            <Image Source="/images/section_bg.png" Stretch="Fill"/>
        </Border>

        <TextBlock Text="Id  :"
 Foreground="Black"
 FontSize="20"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 Margin="72,146,0,0" />

        <TextBlock Text="{Binding Weapon_Id}"
 Foreground="Black"
 FontSize="20"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 Margin="198,148,0,0" RenderTransformOrigin="0.55,2.719" />

        <TextBlock Text="Type  :"
 Foreground="Black"
 FontSize="20"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 Margin="72,205,0,0" RenderTransformOrigin="0.517,3.333" />

        <TextBlock Text="{Binding Weapon_Type}"
 Foreground="Black"
 FontSize="20"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 Margin="198,205,0,0" RenderTransformOrigin="0.55,2.719" />

        <TextBlock Text="Damage  :"
 Foreground="Black"
 FontSize="20"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 Margin="72,266,0,0" />

        <TextBlock Text="{Binding Weapon_RawDamage}"
 Foreground="Black"
 FontSize="20"
 HorizontalAlignment="Left"
 VerticalAlignment="Top"
 FontFamily="/Fonts/#Rubik Medium"
 Margin="198,269,0,0" RenderTransformOrigin="0.55,2.719" />
        <TextBlock Text="Range  :"
Foreground="Black"
FontSize="20"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="72,322,0,0" />
    </Grid>
</UserControl>
