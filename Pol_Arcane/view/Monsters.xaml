<UserControl x:Class="mh.view.Monsters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mh.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vm="clr-namespace:mh.viewModel">
    <Grid>

        <Border Background="Transparent"
CornerRadius="0,20,20,0">
            <Image Source="/images/section_bg.png" Stretch="Fill"/>
        </Border>
        
        <ScrollViewer 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Background="Transparent" 
            Width="600" 
            Height="474"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="0 0" HorizontalAlignment="Center">
                <ItemsControl x:Name="ListViewMonsters">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0" Width="110" Height="160">
                                <StackPanel>
                                    <Border Width="100" Height="100" CornerRadius="5" Margin="5">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Path=IconUrl}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Margin="5 0" Text="{Binding Path=Name}" FontSize="15"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

    </Grid>

</UserControl>
